.wrapper
  .chat-side
    .side-header
      %p.side-header__user-name kohkoh
      %ul.user-menu
        %li.user-menu__edit-user
          %a{:href => "/groups/new"}
            %i.fa.fa-edit
        %li.user-menu__new-group
          %a{:href => "/users/edit"}
            %i.fa.fa-cog
    .groups
      %a{:href => "/groups/messages"}
        .group
          %p.group__group-name aaa
          %p.group__latest-message aaa
  .chat-main
    .main-header
      .current-group{data: { group_id: "987"}}
        %h2.current-group__name aaa
        %ul.member-list
          %li.member-list__member kohkoh
      %a{:href => "/groups/edit"}
        .main-header__edit-btn Edit
    .messages
      .message{data: { message_id: "2354"}}
        .upper-info
          %p.upper-info__user kohkoh
          %p.upper-info__date 2019/05/04(Sat) 11:59:22
        %p.message__text aaa
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
